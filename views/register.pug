extends layout

block content  
  .container
    .col-lg-6.offset-lg-3.col-md-8.offset-md-2
      h3.mt-4.mb-3 Register
      hr/
      form(action="/register", method="post")
        .form-row
          .form-group.col-md-6
            label(for="firstName") First Name
            input.form-control(id="firstName", name="firstName", value=`${firstName || ""}` required)
          .form-group.col-md-6 
            label(for="lastName") Last Name
            input.form-control(id="lastName", name="lastName", value=`${lastName || ""}` required)
        .form-group
          label(for="matricNumber") Matric No. 
          input.form-control(id="matricNumber" name="matricNumber" type="number", value=`${matricNumber || ""}` required)
        .form-group
          label(for="password") Password
          input.form-control(id="password" name="password"  type="password" required)
        .form-group
          label(for="confirmPassword") Confirm Password
          input.form-control(id="confirmPassword" name="confirmPassword"  type="password" required)
        .form-group
          input.form-control(type="hidden", name="_csrf", value=`${csrfToken}`)
        button.btn.btn-dark.btn-block(type="submit") Register